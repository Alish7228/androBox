#!/bin/bash

if [ "$SUDO_USER" != "" ];then HOME=/home/$SUDO_USER;fi
if [ ! "$(id -u)" = "0" ]
then
     echo -e "\nThis program needs to be ran with sudo"
     exit
fi

[[ ! -z $(awk 'FNR==3' ~/.config/wineconf) ]] && sed -i '3d' ~/.config/wineconf
[[ ! -z $(awk 'FNR==2' ~/.config/wine64conf) ]] && sed -i '2d' ~/.config/wine64conf
[[ ! -z $(awk 'FNR==1' ~/.config/winegeconf) ]] && sed -i '1d' ~/.config/winegeconf
[[ ! -z $(awk 'FNR==2' ~/.config/exawineconf) ]] && sed -i '2d' ~/.config/exawineconf
if [ "$1" == "--full-remove" ]
then
     wine64 wineboot -u
     wine wineboot -u
     winege wineboot -u
fi
